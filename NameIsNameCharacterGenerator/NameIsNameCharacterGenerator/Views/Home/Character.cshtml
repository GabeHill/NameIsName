@model NameIsNameCharacterGenerator.Models.CharacterSheet

@{
    ViewBag.Title = "Character";
}

<h2>Character</h2>

<div class="characterHead">
    <h5>Name: @Model.name</h5>
    <h5>Race: @Model.characterRace</h5>
    <h5>Class: @Model.className</h5>
    <h5>Allignment: @Model.Alignment</h5>
</div>
<div class="characterBody">
    <div class="abilityScores">
        <span class="scoreBox">Strength: @Model.Str</span>
        <span class="scoreBox">Dexterity: @Model.Dex</span>
        <span class="scoreBox">Constitution: @Model.Con</span>
        <span class="scoreBox">Intelligence: @Model.Int</span>
        <span class="scoreBox">Wisdom: @Model.Wis</span>
        <span class="scoreBox"> Charisma: @Model.Cha</span>
    </div>
    <div class="skills">
        <h5>Skills</h5>
        <span>Acrobatics: @Model.Acrobatics</span>
        <span>Animal Handling: @Model.AnimalHandling</span>
        <span>Athletics: @Model.Athletics</span>
        <span>Deception: @Model.Deception</span>
        <span>History: @Model.History</span>
        <span>Insight: @Model.Insight</span>
        <span>Intimidation: @Model.Intimidation</span>
        <span>Investigation: @Model.Investigation</span>
        <span>Medicine: @Model.Medicine</span>
        <span>Nature: @Model.Nature</span>
        <span>Perception: @Model.Perception</span>
        <span>Performance: @Model.Performance</span>
        <span>Religion: @Model.Religion</span>
        <span>Slight Of Hand: @Model.SlightOfHand</span>
        <span>Stealth: @Model.Stealth</span>
        <span>Survival: @Model.Survival</span>
    </div>
    <div class="features">
        <h5>Character Features</h5>
        @foreach (string feature in Model.Features_Traits)
        {
            <span>@feature</span>
        }
    </div>
    <div class="langs">
        <h5>Character Languges</h5>
        @foreach (string lang in Model.Prof_Lang)
        {
            <span>@lang</span>
        }
    </div>
    <div class="equipment">
        <h5>Character Equipment</h5>
        @foreach (string equipment in Model.Equipment)
        {
            <span>@equipment</span>
        }
    </div>
    <div class="background">
        <h5>Character Background</h5>
        <span>Bond: @Model.Bond</span>
        <span>Flaw: @Model.Flaw</span>
        <span>Ideal: @Model.Ideal</span>
        <span>Personality Trait: @Model.PersonalityTrait</span>
    </div>
</div>
<div class="characterFoot">
    @Html.ActionLink("View as PDF", "ViewPDF", new { id = ViewBag.id }, new {@class = "btn btn-primary"} )
</div>
